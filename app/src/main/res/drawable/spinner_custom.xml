<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width = "1dp"
                android:color="@color/pale_gray"/>
        </shape>
    </item>

    <item android:gravity="center_vertical|end"
        android:right="10dp">

        <layer-list>

            <item  android:gravity="right" android:width="15dp" android:height="9dp" >
            <bitmap android:src="@drawable/arrow_down" android:tint="@color/black"/>
            </item>

        </layer-list>
    </item>
</layer-list>