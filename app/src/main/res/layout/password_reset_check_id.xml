<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/appbar_menu"
        layout="@layout/appbar"/>

    <TextView
        android:id="@+id/password_reset_check_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입 시 등록하신 정보로\n비밀번호를 재설정 하실 수 있습니다 :)"


        app:layout_constraintTop_toBottomOf="@id/appbar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="23sp"
        android:padding="55dp"/>

    <EditText
        android:id="@+id/id_check_edittext"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/stroke"

        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"

        android:text="아이디를 입력해주세요"
        android:textColor="@color/light_gray"

        app:layout_constraintTop_toBottomOf="@id/password_reset_check_id_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/check_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/check_button"
        android:layout_width="100dp"
        android:layout_height="50dp"


        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"

        android:text="조회"
        android:textSize="15sp"
        android:backgroundTint="@color/button_gray"

        app:layout_constraintTop_toBottomOf="@id/password_reset_check_id_text"
        app:layout_constraintStart_toEndOf="@id/id_check_edittext"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/id_warning_text"
        android:layout_width="170dp"
        android:layout_height="30dp"

        android:text="아이디가 존재하지 않습니다."
        android:textColor="@color/red"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="170dp"

        app:layout_constraintTop_toBottomOf="@id/id_check_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_back_button"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange"

        android:text="돌아가기"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:layout_marginTop="@dimen/login_margin_side"

        app:layout_constraintTop_toBottomOf="@id/id_warning_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>