<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="findIdViewModel"
            type="com.example.menupop.findId.FindIdViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/find_id_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_id"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:padding="30dp"/>

    <EditText
        android:id="@+id/find_id_email"
        android:layout_width="@dimen/email_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/stroke"

        android:hint="이메일"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:textColorHint="@color/light_gray"


        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/find_id_at"/>

    <TextView
        android:id="@+id/find_id_at"
        android:layout_width="@dimen/email_at_width"
        android:layout_height="@dimen/standard_height"

        android:text="@"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/light_gray"


        app:layout_constraintStart_toEndOf="@id/find_id_email"
        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintEnd_toStartOf="@id/find_id_email_selection"/>

    <Spinner
        android:id="@+id/find_id_email_selection"
        android:layout_width="@dimen/email_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/stroke"

        android:entries="@array/spinner_items"


        app:layout_constraintStart_toEndOf="@id/find_id_at"
        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/find_id_email_warning"
        android:layout_width="@dimen/signup_password_and_warning_width"
        android:layout_height="@dimen/signup_warning_height"

        android:text="@string/email_rule_warning"
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="15.5sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"


        app:layout_constraintTop_toBottomOf="@id/find_id_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_id_comfirm_button"
        android:layout_width="@dimen/signup_password_and_warning_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/orange"

        android:text="확인하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"

        android:layout_marginTop="@dimen/standard_height"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_id_email_warning"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>