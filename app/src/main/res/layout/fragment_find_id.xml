<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="findIdViewModel"
            type="com.example.menupop.findId.FindIdViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/appbar_menu"
            layout="@layout/appbar"/>



        <TextView
            android:id="@+id/find_id_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="@string/find_id"


            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_menu" />

        <EditText
            android:id="@+id/find_id_email"
            android:layout_width="@dimen/email_width"
            android:layout_height="@dimen/standard_height"
            android:background="@drawable/stroke"

            android:hint="이메일"
            android:paddingStart="10dp"
            android:textColorHint="@color/light_gray"
            android:textSize="16sp"


            app:layout_constraintEnd_toStartOf="@id/find_id_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_info_text" />

        <TextView
            android:id="@+id/find_id_at"
            android:layout_width="@dimen/email_at_width"
            android:layout_height="@dimen/standard_height"

            android:gravity="center"
            android:text="@"
            android:textColor="@color/light_gray"
            android:textSize="16sp"


            app:layout_constraintEnd_toStartOf="@id/find_id_email_selection"
            app:layout_constraintStart_toEndOf="@id/find_id_email"
            app:layout_constraintTop_toBottomOf="@id/find_id_info_text" />

        <Spinner
            android:id="@+id/find_id_email_selection"
            android:layout_width="@dimen/email_width"
            android:layout_height="@dimen/standard_height"
            android:background="@drawable/stroke"

            android:entries="@array/spinner_items"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/find_id_at"
            app:layout_constraintTop_toBottomOf="@id/find_id_info_text" />

        <TextView
            android:id="@+id/find_id_email_warning"
            android:layout_width="@dimen/signup_password_and_warning_width"
            android:layout_height="@dimen/signup_warning_height"

            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/email_rule_warning"
            android:textColor="@color/red"
            android:textSize="15.5sp"
            android:visibility="gone"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_at" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_id_comfirm_button"
            android:layout_width="@dimen/signup_password_and_warning_width"
            android:layout_height="@dimen/standard_height"
            android:layout_marginTop="@dimen/standard_height"
            android:background="@drawable/button_round"

            android:backgroundTint="@color/orange"
            android:text="확인하기"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_email_warning" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>