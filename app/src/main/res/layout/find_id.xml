<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/appbar_menu"
        layout="@layout/appbar"/>

    <TextView
        android:id="@+id/find_id_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_id"

        app:layout_constraintTop_toBottomOf="@+id/appbar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:padding="30dp"/>

    <EditText
        android:id="@+id/find_id_email"
        android:layout_width="@dimen/email_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/stroke"

        android:text="이메일"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:textColor="@color/light_gray"

        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/find_id_at"/>

    <TextView
        android:id="@+id/find_id_at"
        android:layout_width="@dimen/email_at_width"
        android:layout_height="@dimen/standard_height"

        android:text="@"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/light_gray"

        app:layout_constraintStart_toEndOf="@id/find_id_email"
        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintEnd_toStartOf="@id/find_id_email_selection"/>

    <Spinner
        android:id="@+id/find_id_email_selection"
        android:layout_width="@dimen/email_width"
        android:layout_height="@dimen/standard_height"

        app:layout_constraintStart_toEndOf="@id/find_id_at"
        app:layout_constraintTop_toBottomOf="@id/find_id_info_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/find_id_email_warning"
        android:layout_width="@dimen/signup_password_and_warning_width"
        android:layout_height="@dimen/signup_warning_height"

        android:text="@string/email_rule_warning"
        android:textColor="@color/red"
        android:textSize="15.5sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"

        app:layout_constraintTop_toBottomOf="@id/find_id_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/find_id_certification"
        android:layout_width="@dimen/signup_with_button_edittext_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/stroke"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/find_id_email_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/find_id_certification_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_id_certification_button"
        android:layout_width="@dimen/signup_button_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/button_round"

        android:text="인증번호"
        android:textColor="@color/black"
        android:textSize="16sp"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/find_id_email_warning"
        app:layout_constraintStart_toEndOf="@id/find_id_certification"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/find_id_certification_warning"
        android:layout_width="@dimen/signup_password_and_warning_width"
        android:layout_height="@dimen/standard_height"

        android:text="시간 제한 3:00"
        android:textColor="@color/red"
        android:textSize="15.5sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"

        app:layout_constraintTop_toBottomOf="@id/find_id_certification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_id_comfirm_button"
        android:layout_width="@dimen/signup_password_and_warning_width"
        android:layout_height="@dimen/standard_height"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/orange"

        android:text="확인하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/login_margin_side"

        app:layout_constraintTop_toBottomOf="@id/find_id_certification_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>