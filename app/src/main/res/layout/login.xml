<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginViewModel"
            type="com.example.menupop.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="@dimen/login_image_width"
            android:layout_height="@dimen/login_image_width"
            android:src="@drawable/menupop_logo3"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/login_id_editText"
            android:layout_width="@dimen/login_width"
            android:layout_height="@dimen/login_height"
            android:background="@drawable/stroke"
            android:hint="아이디 입력"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            android:padding="10dp"


            app:layout_constraintTop_toBottomOf="@id/login_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:passwordToggleEnabled="true"
            android:textColorHint="@color/light_gray"

            app:layout_constraintTop_toBottomOf="@id/login_id_editText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <EditText
                android:id="@+id/login_password_editText"
                android:layout_width="@dimen/login_width"
                android:layout_height="@dimen/login_height"
                android:hint="비밀번호 입력"

                android:inputType="textPassword"
                android:textColor="@color/light_gray"
                android:textSize="16sp"

                android:paddingStart="10dp"
                android:background="@drawable/stroke"
                android:layout_marginTop="@dimen/login_margin_top" />

        </com.google.android.material.textfield.TextInputLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="@dimen/login_width"
            android:layout_height="@dimen/standard_height"
            android:backgroundTint="@color/orange"
            android:background="@drawable/button_round"
            android:text="로그인"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/login_margin_top"

            app:layout_constraintTop_toBottomOf="@+id/login_password_input_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/login_find_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_find_text"
            android:text="아이디 찾기"
            android:textSize="15.5sp"
            android:layout_marginTop="@dimen/login_margin_top"
            android:layout_marginStart="@dimen/login_margin_side"

            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_slash"/>

        <TextView
            android:id="@+id/login_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginTop="@dimen/login_margin_top"

            app:layout_constraintLeft_toRightOf="@id/login_find_id"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintRight_toLeftOf="@id/login_find_password"/>


        <TextView
            android:id="@+id/login_find_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_find_text"
            android:text="비밀번호 찾기"
            android:textSize="15.5sp"
            android:layout_marginTop="@dimen/login_margin_top"

            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintLeft_toRightOf="@id/login_slash"
            app:layout_constraintRight_toLeftOf="@id/login_slash2"/>

        <TextView
            android:id="@+id/login_slash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="15.5sp"
            android:layout_marginTop="@dimen/login_margin_top"

            app:layout_constraintLeft_toRightOf="@id/login_find_password"
            app:layout_constraintRight_toLeftOf="@id/login_signup"
            app:layout_constraintTop_toBottomOf="@id/login_button"/>

        <TextView
            android:id="@+id/login_signup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_find_text"
            android:text="회원가입"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/login_margin_top"
            android:layout_marginEnd="@dimen/login_margin_side"
            android:textSize="15.5sp"

            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintLeft_toRightOf="@id/login_slash2"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/login_social_start"
            android:layout_width="@dimen/signup_button_width"
            android:layout_height="2dp"
            android:background="@color/light_gray"

            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"

            app:layout_constraintTop_toBottomOf="@id/login_find_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_social_text"
            app:layout_constraintBottom_toTopOf="@+id/login_social_buttons"/>

        <TextView
            android:id="@+id/login_social_text"
            android:layout_width="@dimen/email_width"
            android:layout_height="wrap_content"

            android:text="SNS 계정으로 로그인"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:layout_marginTop="100dp"

            app:layout_constraintTop_toBottomOf="@id/login_find_password"
            app:layout_constraintStart_toEndOf="@id/login_social_start"
            app:layout_constraintEnd_toStartOf="@id/login_social_end"
            app:layout_constraintBottom_toTopOf="@+id/login_social_buttons"/>

        <View
            android:id="@+id/login_social_end"
            android:layout_width="@dimen/signup_button_width"
            android:layout_height="2dp"
            android:background="@color/light_gray"

            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"

            app:layout_constraintTop_toBottomOf="@id/login_find_password"
            app:layout_constraintStart_toEndOf="@id/login_social_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/login_social_buttons"/>

        <LinearLayout
            android:id="@+id/login_social_buttons"
            android:layout_width="@dimen/login_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="30dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_social_text"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/googleLoginButton"
                android:layout_width="@dimen/standard_height"
                android:layout_height="@dimen/standard_height"
                android:background="@drawable/google_logo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kakaoLoginButton"
                android:layout_width="@dimen/standard_height"
                android:layout_height="@dimen/standard_height"
                android:background="@drawable/kakao_logo"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/naverLoginButton"
                android:layout_width="@dimen/standard_height"
                android:layout_height="@dimen/standard_height"
                android:background="@drawable/naver_logo"
                android:layout_gravity="end"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>