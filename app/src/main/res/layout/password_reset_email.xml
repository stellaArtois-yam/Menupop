<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/appbar_menu"
        layout="@layout/appbar"/>

    <TextView
        android:id="@+id/password_reset_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 인증 후 비밀번호를 재설정\n하실 수 있습니다 :)"


        app:layout_constraintTop_toBottomOf="@id/appbar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="23sp"
        android:padding="55dp"/>

    <EditText
        android:id="@+id/password_reset_id"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/stroke"

        android:layout_marginStart="@dimen/login_margin_side"


        android:text="이메일"
        android:paddingStart="10dp"
        android:textColor="@color/light_gray"

        app:layout_constraintTop_toBottomOf="@id/password_reset_info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/at"/>

    <TextView
        android:id="@+id/at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@"
        android:textSize="15sp"


        app:layout_constraintTop_toBottomOf="@id/password_reset_info_text"
        app:layout_constraintStart_toEndOf="@id/password_reset_id"
        app:layout_constraintEnd_toStartOf="@id/email_selection"/>

    <Spinner
        android:id="@+id/email_selection"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/stroke"

        android:layout_marginEnd="@dimen/login_margin_side"


        android:paddingStart="10dp"

        app:layout_constraintTop_toBottomOf="@id/password_reset_info_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/at" />

    <TextView
        android:id="@+id/email_warning_text"
        android:layout_width="170dp"
        android:layout_height="30dp"

        android:textColor="@color/red"
        android:text="이메일 형식이 일치하지 않음"
        android:gravity="center_vertical"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="175dp"

        app:layout_constraintTop_toBottomOf="@id/password_reset_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/certification_number"/>

    <EditText
        android:id="@+id/certification_number"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/stroke"

        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"

        android:text="인증번호를 입력해주세요"
        android:textColor="@color/light_gray"
        android:paddingStart="10dp"

        app:layout_constraintTop_toBottomOf="@id/email_warning_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/certification_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/certification_button"
        android:layout_width="100dp"
        android:layout_height="50dp"


        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"

        android:text="인증번호"
        android:textSize="15sp"
        android:backgroundTint="@color/button_gray"

        app:layout_constraintTop_toBottomOf="@id/email_warning_text"
        app:layout_constraintStart_toEndOf="@id/certification_number"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/certification_warning_text"
        android:layout_width="170dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="170dp"

        android:text="시간 제한 3:00"
        android:textColor="@color/red"
        android:textSize="15sp"


        app:layout_constraintTop_toBottomOf="@id/certification_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/last_button"
        android:layout_width="370dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/orange"
        android:text="확인하기"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:layout_marginTop="@dimen/login_margin_side"


        app:layout_constraintTop_toBottomOf="@id/certification_warning_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>