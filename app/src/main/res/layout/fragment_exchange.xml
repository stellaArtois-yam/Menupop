<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="exchangeRateViewModel"
            type="com.example.menupop.mainActivity.ExchangeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".mainActivity.ExchangeFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/exclamation" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="@string/exchange_warning"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:layout_margin="30dp"
                    android:text="보유 화폐"
                    android:textColor="@color/light_gray"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/exchange_source_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:maxLength="10"
                        android:text="@{exchangeRateViewModel.formattedNumber}"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/exchange_source_spinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/standard_height"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/profile_button"
                        android:backgroundTint="@color/button_gray"

                        android:entries="@array/country"

                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:layout_margin="30dp"
                    android:text="환전 화폐"
                    android:textColor="@color/light_gray"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exchange_target_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:text="@{exchangeRateViewModel.result}"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/exchange_target_spinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/standard_height"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/profile_button"
                        android:backgroundTint="@color/button_gray"

                        android:entries="@array/country"

                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:layout_margin="30dp"
                    android:text="기준 환율"
                    android:textColor="@color/light_gray"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/exchange_standard_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exchange_standard_textview"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/standard_height"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/profile_button"
                        android:backgroundTint="@color/button_gray"
                        android:gravity="center"
                        android:text="기준 환율"
                        android:textAlignment="center"

                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/signup_with_button_edittext_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/profile_button"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/exchange_rate_application_status"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/login_height"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메뉴판 번역 시 환율 적용"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </ScrollView>


</layout>